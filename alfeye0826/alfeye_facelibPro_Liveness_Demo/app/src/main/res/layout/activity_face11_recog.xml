<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alfeye.facedemo.activity.Face1NRecogActivity">

    <include
        android:id="@+id/base_activity_track"
        layout="@layout/base_activity_track" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_bmp"
            android:layout_width="100dp"
            android:layout_height="120dp" />

        <ImageView
            android:id="@+id/iv_cardbmp"
            android:layout_width="100dp"
            android:layout_height="120dp" />

        <TextView
            android:id="@+id/tv_face_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/lightGreen"
            android:minWidth="100dp"
            android:padding="2dp"
            android:text="比对结果:"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_liveness_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/lightgray"
            android:textColor="@android:color/black"
            android:textSize="30sp" />
    </LinearLayout>


</RelativeLayout>
